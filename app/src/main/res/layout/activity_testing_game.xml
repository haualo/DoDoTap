<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testingGame"
    android:background="@drawable/backgroundnew3"
    android:orientation="vertical">


    <com.google.android.gms.ads.AdView
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-6760992196528607/7281807300" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/smallSpike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="-100dp"
            app:srcCompat="@drawable/spikesmall" />

        <ImageView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dodobird1small"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/player2fly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dodobird2smallfly"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/player2fall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dodobird2smallfall"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/deadsmall"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/crystalP"
            android:layout_width="38dp"
            android:layout_height="46dp"
            android:src="@drawable/crystal"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tapStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150sp"
            android:text="TAP TAP"
            android:textColor="@color/colorPrimary"
            android:textSize="70sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/three1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tree1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/three2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/tree2" />

        <ImageView
            android:id="@+id/three3"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tree3" />

        <ImageView
            android:id="@+id/cloud1"
            android:layout_marginStart="0dp"
            android:layout_width="135dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/cloud" />
        <ImageView
            android:id="@+id/cloud2"
            android:layout_marginStart="280dp"
            android:layout_width="135dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/cloud" />
        <ImageView
            android:id="@+id/cloud3"
            android:layout_marginStart="120dp"
            android:layout_width="135dp"
            android:layout_height="81dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/cloud" />


    </FrameLayout>




    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
</RelativeLayout>